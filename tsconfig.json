{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "target": "esnext",
        "baseUrl": "./",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2017.object"
        ],
        "declaration": true,
        "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings",
        "types"
    ]
}
